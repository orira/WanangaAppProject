        <TextView
                android:id="@+id/line_3_hymn_fragment_third"
                style="@style/text_item_large"
                android:text="@string/line_3_himene_third" />

        <TextView
                android:id="@+id/line_4_hymn_fragment_third"
                style="@style/text_item_large"
                android:text="@string/line_4_himene_third" />

        <TextView
                android:id="@+id/line_5_hymn_fragment_third"
                style="@style/text_item_large"
                android:text="@string/line_5_himene_third" />

