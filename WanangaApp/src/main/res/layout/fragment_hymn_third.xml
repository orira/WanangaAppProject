                android:text="@string/line_7_himene_third" />

        <TextView
                android:id="@+id/line_8_hymn_fragment_third"
                style="@style/text_item_large"
                android:text="@string/line_8_himene_third" />

        <TextView
                android:id="@+id/line_9_hymn_fragment_third"
                style="@style/text_item_large"
                android:text="@string/line_9_himene_third" />

        <TextView
                android:id="@+id/line_10_hymn_fragment_third"
                style="@style/text_item_large"
                android:text="@string/line_10_himene_third" />

        <Button
                android:id="@+id/button_himene_third"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/button_start"
                android:textColor="@color/WhiteSmoke"
                android:layout_marginBottom="@dimen/standard_double"
                android:background="@drawable/button_green"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/standard"/>

    </LinearLayout>
